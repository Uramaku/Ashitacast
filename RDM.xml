	<midmagic><!--When Casting-->
        <if ad_skill="DarkMagic">
                <equip set="Magical_DRK"/>
           </if>
		<elseif ad_skill="HealingMagic">
			<if ad_name="Cure*|Curaga*">
                        <equip set="Magical_Healing"/>
					</if>
		</elseif>
		<elseif ad_skill="ElementalMagic">
			<if ad_name="Blizzard*|Fire*|Aero*|Stone*|Thunder*|Water*|Geohelix*|Hydrohelix*|Anemohelix*|Pyrohelix*|Cryohelix*|Ionohelix*|Noctohelix*|Luminohelix*">
                        <equip set="Magical_ATK"/>
					</if>
		</elseif>
		<elseif ad_skill="EnfeeblingMagic">
			<if ad_name="Paralyze*|Slow*|Silence|Dia*|Blind*|Poison*|Gravity|Bind|Sleep*|Break|Distract*|Break">
                        <equip set="Magical_ACC"/>
					</if>
			<if ad_name="Addle">
			            <equip set="Addle"/>
					</if>
		</elseif>
        <elseif ad_skill="EnhancingMagic">
			<if ad_name="En*|Bar*|Phalanx|Blink|Haste*|Protect*|Shell*|Refresh|Flurry|Rainstorm*|Sandstorm*|Windstorm*|Firestorm*|Hailstorm*|Thunderstorm*||Voidstorm*|Flurry|*Spikes">
