	<idlegear>
        <if P_status="engaged"><equip set="Melee" /></if><!--When engaged this will equip "Melee Set"-->
		<else><equip set="Stand" /></else><!--When not engaged this will equip "Stand Set"-->
	</idlegear>

	<jobability><!--jobability equip set.-->
	    <if ad_name="Jump">
		    <equip>
			    <body>Vishap Mail +1</body>
			<feet>Vishap Greaves +1</feet>
		    </equip>
		</if>
		<if ad_name="High Jump">
		    <equip>
			    <legs>Vishap Brais +1</legs>
		    </equip>
		</if>
		<if ad_name="Spirit Link">
		    <equip>
			    <head>Vishap Armet +1</head>
		    </equip>
		</if>
		<if ad_name="Ancient Circle">
		    <equip>
			    <legs>Vishap Brais +1</legs>
		    </equip>
		</if>
		<if ad_name="Spirit Jump|Soul Jump">
		    <equip>
			<legs>Pelt. Cuissots +1</legs>
			<feet>Vishap Greaves +1</feet>
		    </equip>
		</if>
		<if ad_name="Restoring Breath">
		    <equip>			
		    </equip>
		</if>
		<if ad_name="Angon">
		    <equip>
			    <Ammo>Angon</Ammo>
				<rear>Dragoon's Earring</rear>
		    </equip>
		</if>
		<if ad_name="Call Wyvern">
		    <equip>
			<Body>Ptero. Mail +1</Body>
		    </equip>
		</if>
	</jobability>
	
	<weaponskill>
