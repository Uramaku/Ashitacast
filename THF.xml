	<idlegear>
        <if P_status="engaged"><equip set="Melee" /></if><!--When engaged this will equip "Melee Set"-->
		<else><equip set="Stand" /></else><!--When not engaged this will equip "Stand Set"-->
	</idlegear>

	<jobability><!--jobability equip set.-->
	    <if ad_name="Sneak Attack">
		    <equip>
		        <hands>Skulk. Armlets +1</hands>
		    </equip>
		</if>
		<if ad_name="Trick Attack">
			<equip>
		        <hands>Pill. Armlets +1</hands>
		    </equip>
		</if>
		<if ad_name="Hide">
			<equip>
		        <body>Pillager's Vest +1</body><lring>Gorney Ring</lring>
				<waist>Chaac Belt</waist>
		    </equip>
		</if>
		<if ad_name="Steal">
			<equip>
		        <neck>Pentalagus Charm</neck>
				<hands>Thief's Kote</hands><lring>Gorney Ring</lring><rring>Rogue's Ring</rring>
				<legs>Pill. Culottes +1</legs><feet>Pill. Poulaines +1</feet>
		    </equip>
		</if>
	</jobability>
	
	<weaponskill>
		<if ad_name="Mandalic Stab"><equip set="Stab_WS" /></if><!--Weaponskill action when (1000 TP or higher).-->
	</weaponskill>
	
	<midmagic>
        <if ad_skill="Ninjutsu">
		    <if ad_name="Utsusemi*|Tonko*|Monomi">
                <equip set="Ninjutsu_Buff"/>
        </if>
